{
    "pipeline": {
        "name": "probe_counts"
    },
    "transform": {
        "image": "probecounts:v4",
        "cmd": ["/bin/bash"],
        "stdin": [
            "for line in $(find /pfs -type f); do",
                "echo \"Running $line\"",
                "export OUTDIR=$(dirname $line | sed 's@/pfs/input@/pfs/out@g')",
                "echo $OUTDIR",
                "mkdir -p $OUTDIR",
                "/usr/bin/count_probes $line $OUTDIR",
            "done"
        ]
    },
    "input": {
        "atom": {
            "name": "input",
            "repo": "demux",
            "glob": "/*/*"
        }
    }
}
