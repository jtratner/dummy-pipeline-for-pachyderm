{
    "pipeline": {
        "name": "count_files"
    },
    "transform": {
        "image": "centos:7",
        "cmd": ["/bin/bash"],
        "stdin": [
            "find /pfs/demux/FlowcellA -type f | wc -l > /pfs/out/FlowcellA-count.txt",
            "find /pfs/demux/ -type f | wc -l > /pfs/out/all-count.txt",
            "date > /pfs/out/date.txt"
        ]
    },
    "input": {
        "atom": {
            "repo": "demux",
            "glob": "/*"
        }
    }
}
